# Find the area of a circle
#include <stdio.h>
int main() {
   float pie = 3.14;
   int radius;
   printf("Enter the circle radius:");
   scanf("%d",& radius);
   printf("The radius of the circle is %d\n" , radius);
   float area = (float)(3.14* radius * radius);
   printf("The area of the given circle is %f", area);
   return 0;
} 
